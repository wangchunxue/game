<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>贪吃蛇</title>
	<style>
		#container{
			width: 1000px;
			border: 1px solid #000;
			margin: 30px auto;
		}
		#ground{
			width: 1000px;
			height: 500px;
			background: #ccc;
			position: relative;
		}
		#ground .block{
			width: 20px;
			height: 20px;
			background: #0f0;
			float: left;
		}
		#ground .snake{
			background: #000;
			position: absolute;
			top: 60px;
		}
		#ground .food{
			background: #f00;
			position: absolute;
		}

		#control{
			width: 1000px;
			height: 50px;
		}
	</style>
</head>
<body>
	<div id="container">
		<div id="ground"></div>
		<div id="control">
			<button id="start">开始</button>
		</div>
	</div>

	<script>
		//1.创建操场，生成小格，小格大小20*20
		var oGround = document.getElementById('ground');
		for(var i=0; i<50*25; i++){
			var oDiv = document.createElement('div');
			oDiv.className = 'block';
			oGround.appendChild(oDiv);
		}
		//2.创建小蛇
		var aSnakeBody = [];//保存小蛇身体的数组
		for(var i=0; i<3; i++){
			var oDiv = document.createElement('div');
			oDiv.className = 'block snake';
			oDiv.style.left = (3 - i) * 20 + 'px';
			oGround.appendChild(oDiv);
			aSnakeBody.push(oDiv);
		}
		//3.创建食物,水平最大值980，竖直最大值480
		var oFood;
		var iFoodLeft;
		var iFoodTop;
		function createFood(){
			do{
				var bIsFind = true;//标志位，标志是否找到符合条件的食物
				iFoodLeft = Math.floor(Math.random() * 50) * 20;
				iFoodTop = Math.floor(Math.random() * 25)  * 20;
				for(var i=0; i<aSnakeBody.length; i++){
					if(aSnakeBody[i].offsetLeft == iFoodLeft && aSnakeBody[i].offsetTop == iFoodTop){
						bIsFind = false;
						break;
					}
				}
			}while(!bIsFind);
			oFood = document.createElement('div');
			oFood.className = 'block food';
			oFood.style.left = iFoodLeft + 'px';
			oFood.style.top = iFoodTop + 'px';
			oGround.appendChild(oFood);
		}
		createFood();
		
		//4.小蛇驰骋
		var oStart = document.getElementById('start');
		oStart.onclick = function(){
			setInterval(function(){
				move();
			}, 300);
		};
		var direction = 'right';
		document.body.onkeydown =function(e){
			e = e || event;
			var keyCode = e.which || e.keyCode;
			switch(keyCode){
				case 38:
					direction = 'up';
					break;
				case 40:
					direction = 'down';
					break;
				case 37:
					if(direction != 'right'){
						direction = 'left';
					}
					break;
				case 39:
					direction = 'right';
					break;
			}
		};
		function move(){
			var oSnakeHead = aSnakeBody[0];//保存蛇头
			var nextPos = {//保存下一个坐标，初始值是当前的坐标
				left : oSnakeHead.offsetLeft,
				top : oSnakeHead.offsetTop
			};
			if(direction == 'up'){
				nextPos.top -= 20;
			}else if(direction == 'down'){
				nextPos.top += 20;
			}else if(direction == 'left'){
				nextPos.left -= 20;
			}else if(direction == 'right'){
				nextPos.left += 20;
			}
			for(var i=0; i<aSnakeBody.length; i++){
				var nowPos = {
					left : aSnakeBody[i].offsetLeft,
					top : aSnakeBody[i].offsetTop
				};
				aSnakeBody[i].style.left = nextPos.left + 'px';
				aSnakeBody[i].style.top = nextPos.top + 'px';
				nextPos = nowPos;
			}
			//5.吃食物
			if(oSnakeHead.offsetLeft == oFood.offsetLeft && oSnakeHead.offsetTop == oFood.offsetTop){
				oFood.className = 'block snake';
				aSnakeBody.push(oFood);
				createFood();
			}
		}
		//6.判断：是否撞墙以及是否自杀
		

		//7.其他玩法

	</script>
























</body>
</html>
